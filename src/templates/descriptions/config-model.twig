{% import "activity/includes/macros" as macros %}

{% if log.changedFields ?? false %}
    <ul>
        {% for field in log.changedFields %}
            {% set template = log.dirtyFieldTemplates[field.name] ?? false %}
            {% if template %}
                {% include template %}
            {% else %}
                {{ macros.fieldValue(field, log) }}
            {% endif %}
        {% endfor %}
    </ul>
{% endif %}